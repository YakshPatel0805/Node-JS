// Operations on file System
const fs = require('fs')


// Read File
fs.readFile('./data.txt', 'utf8', (err, data) => {
    if (err) {
        console.error(err);
        return;
    }
    console.log(data);
});


// Write File
fs.writeFile('./output.txt', 'Hello World!', (err) => {
    if (err) {
        console.error(err);
        return;
    }
    console.log('File written successfully');
});


// Append File
fs.appendFile('./output.txt', ' Hello World!', (err) => {
    if (err) {
        console.error(err);
        return;
    }
    console.log('File appended successfully');
});


// delete a file
fs.rm('op.txt', { recursive: true }, (err) => {
    if (err) {
        console.error(err)
        return
    }
    console.log('file deleted successfully')
});


